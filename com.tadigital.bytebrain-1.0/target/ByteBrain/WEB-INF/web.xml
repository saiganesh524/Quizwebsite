<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
	http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0" metadata-complete="true">

	<servlet>
		<servlet-name>SignUpProcessServlet</servlet-name>
		<servlet-class>com.tadigital.bytebrain.student.servlet.SignUpProcessServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginProcessServlet</servlet-name>
		<servlet-class>com.tadigital.bytebrain.student.servlet.LoginProcessServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutProcessServlet</servlet-name>
		<servlet-class>com.tadigital.bytebrain.student.servlet.LogoutProcessServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HomeProcessServlet</servlet-name>
		<servlet-class>com.tadigital.bytebrain.student.servlet.HomeProcessServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>QuizProcessServlet</servlet-name>
		<servlet-class>com.tadigital.bytebrain.student.servlet.QuizProcessServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SignUpProcessServlet</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginProcessServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutProcessServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HomeProcessServlet</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>QuizProcessServlet</servlet-name>
		<url-pattern>/start-quiz</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>/WEB-INF/index.html</welcome-file>
	</welcome-file-list>
</web-app>